<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/command_relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/icon_thermometer_50" />

    <TextView
        android:id="@+id/textview_tempitem_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView"
        android:text="Temperaturen är "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textview_tempitem_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textview_tempitem_description"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button_tempitem_turnoff"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textview_tempitem_description"
        android:text="Stäng av"
        android:textColor="@color/secondaryColor" />
</RelativeLayout>